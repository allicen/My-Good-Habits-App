<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:id="@+id/filter_results_fragment"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:id="@+id/filter_results_title"
            android:textStyle="bold"
            android:paddingTop="10sp"
            android:paddingBottom="5sp"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/filter_results_hint"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:id="@+id/reset_filter_results"
                android:layout_marginTop="-10sp"
                android:gravity="bottom|right"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                tools:ignore="RtlHardcoded,UseCompoundDrawables">

            <ImageView
                    android:src="@drawable/ic_highlight_off"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="Reset"/>

            <TextView
                    android:text="@string/reset_filter_results"
                    android:textColor="#ff0000"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    android:layout_marginStart="5dp"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/fragment_habits_tab" />

</LinearLayout>